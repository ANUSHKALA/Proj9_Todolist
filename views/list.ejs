<%- include("header") -%> 

 <div class="box" id="heading">
    <h1><%= listName %> </h1>
 </div>

 <div class="box">
    <% taskList.forEach(task => { %>
        <form action="/delete" method="post">
            <div class="newTask">
                <input type="checkbox" name="doneBox" value="<%= task._id %>" onChange="this.form.submit()">
                <p><%= task.name %> </p>
            </div>
            <input type="hidden" name = "add" value = <%= listName %> >
        </form>
    <% }) %>

    <form class="newTask" action= "/today"  method="post">
        <input type="text" name="newItem" placeholder="New Task" autocomplete="off">
        <button type="submit" name = "add" value = <%= listName %>  >+</button>
    </form>
 </div>
   
<%- include('footer') -%> 